<p id="notice"><%= notice %></p>

<%= link_to 'All tasks', tasks_path %>
<%= link_to '-Show Completed', tasks_path(:completed => true) %>
<%= link_to '-Show Incomplete', tasks_path(:completed => false) %>
<% if @filter == "completed" %>
<h1>Completed Tasks</h1>
<% elsif @filter == "incompleted" %> 
<h1>Incompleted Tasks</h1>
<% else %>
<h1>Tasks</h1>
<% end %>
<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Completed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.description %></td>
        <td><%= task.completed %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path %>
